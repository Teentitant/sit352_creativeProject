<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".homePage.AddItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_add_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_backspace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:text="Add New Item"
            android:textColor="@color/orange"
            android:textSize="30dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="50dp"
            android:paddingRight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:text="title"
                android:textColor="@color/md_grey_700"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_add_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_round"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="username/email"
                android:textColor="@color/md_grey_700"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_add_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_round"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="password"
                android:textColor="@color/md_grey_700"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_add_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_round"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="description"
                android:textColor="@color/md_grey_700"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_add_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/layout_round"
                android:padding="15dp" />

            <TextView
                android:id="@+id/bt_add_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:background="@drawable/layout_round_orange"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="add new item"
                android:textColor="@color/lightGray"
                android:textSize="30dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>