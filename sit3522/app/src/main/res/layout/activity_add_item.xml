<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".homePage.AddItemActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:text="Add New Item"
        android:textColor="@color/orange"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="title"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_add_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_round"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="username/email"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_add_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_round"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="password"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_add_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_round"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="description"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_add_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/layout_round"
        android:padding="15dp" />

    <Button
        android:id="@+id/bt_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_orange"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="add"
        android:textColor="@color/lightGray"
        android:textSize="20dp" />

</LinearLayout>